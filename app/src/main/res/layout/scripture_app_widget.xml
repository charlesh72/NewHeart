<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:padding="6dp">

        <TextView
            android:id="@+id/widget_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/action_add_note"
            android:layout_toStartOf="@+id/action_add_note"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Reference here lorem ipsum dolor"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageButton
            android:id="@+id/action_memorize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_school_white_24dp" />

        <ImageButton
            android:id="@+id/action_add_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/action_memorize"
            android:layout_toStartOf="@id/action_memorize"
            android:background="#00000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_note_add_white_24dp" />

    </RelativeLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:id="@+id/list"/>


</LinearLayout>