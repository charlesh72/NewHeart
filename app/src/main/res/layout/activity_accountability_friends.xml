<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beakon.newheart.scripturestudy.accountability.AccountabilityFriendsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:popupTheme="?toolbarPopupTheme"
        style="@style/Toolbar"/>

    <TextView
        android:id="@+id/accFriendsTVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <EditText
        android:id="@+id/accFriendsETName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/accFriendsTVPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <EditText
        android:id="@+id/accFriendsETPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" />

    <View
        android:id="@+id/accFriendsVColoredLineUpper"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accFriendsTVInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:paddingLeft="20dp"
            android:text="Info"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accFriendsTVHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accFriendsTVShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/accFriendsVColoredLineLower"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <ListView
        android:id="@+id/accFriendsLVfriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
