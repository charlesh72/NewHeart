<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lightDayFLDateHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:background="@color/red"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lightDayTVMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:text="Dec"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/lightDayTVDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:paddingBottom="12dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/lightDayTVRef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lightDayFLDateHolder"
        android:layout_toEndOf="@+id/lightDayFLDateHolder"
        android:layout_toRightOf="@+id/lightDayFLDateHolder"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lightDayTVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lightDayFLDateHolder"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/lightDayFLDateHolder"
        android:layout_toRightOf="@+id/lightDayFLDateHolder"
        android:text="Jesus lifted others burdens and so can you" />

    <CheckBox
        android:id="@+id/lightDayCBact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightDayFLDateHolder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/lightDayCBact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lightDayCBact1"
        android:layout_alignStart="@+id/lightDayCBact1"
        android:layout_below="@+id/lightDayCBact1"
        android:layout_marginTop="12dp"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/lightDayCBact3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lightDayCBact2"
        android:layout_alignStart="@+id/lightDayCBact2"
        android:layout_below="@+id/lightDayCBact2"
        android:layout_marginTop="12dp"
        android:text="CheckBox" />
</RelativeLayout>